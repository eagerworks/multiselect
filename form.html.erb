<%= form_with model: @project do |form| %>
  <%= render "shared/error_messages", resource: @project %>

  <div class="space-y-12">
    <div class="border-b border-gray-900/10 pb-8">

      <div class="mt-10 mb-5 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-3">
        <div class="sm:col-span-3">
          <div class="form-group">
            <%= form.label :name %>
            <%= form.text_field :name, autocomplete: "name", placeholder: true, class: "form-control" %>
          </div>

          <%= render partial: "shared/multiselect", locals: { form: form, label: 'Leaders', field: :leader_ids, options: @team_members } %>
        </div>
      </div>
    </div>
  </div>

  <div class="mt-6 flex items-center justify-end gap-x-6">
    <button type="button" class="text-sm font-semibold leading-6 text-gray-900">Cancel</button>
    <button type="submit" class="btn btn-primary">Save</button>
  </div>
<% end %>
